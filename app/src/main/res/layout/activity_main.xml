<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8CBF1"
    android:gravity="bottom|center"
    android:orientation="vertical">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="155dp"
    android:layout_height="155dp"
    android:adjustViewBounds="false"
    android:background="#65489B"
    android:cropToPadding="false"
    android:scaleType="centerInside"
    android:src="@drawable/android_logo" />

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:text="@string/nameText"
    android:textAlignment="center"
    android:textColor="#65489C"
    android:textSize="34sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/professionText"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textColor="#65489B"
    android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundTintMode="add"
                android:scaleType="fitEnd"
                android:src="@android:drawable/ic_menu_call"
                app:tint="#65489B" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/phoneNumberText"
                android:textColor="#65489B"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@android:drawable/ic_menu_share"
                android:tint="#65489B" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/telegramUsernameText"
                android:textColor="#65489B"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@android:drawable/sym_action_email"
                android:tint="#927DBD" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="@string/emailText"
                android:textColor="#65489B"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
